// updated middle ware
app.use(express.urlencoded({ extended: false }));
app.use(express.json());


//tests 

const chai = require("chai");
const chaiHttp = require("chai-http");
const expect = chai.expect;

chai.use(chaiHttp);

describe("Route Tests", () => {
  it("should redirect GET / to /login with status code 302", () => {
    return chai
      .request("http://localhost:3000")
      .get("/")
      .then((res) => {
        expect(res).to.redirect;
        expect(res).to.redirectTo("http://localhost:3000/login");
        expect(res).to.have.status(302);
      });
  });

  it("should redirect GET /urls/new to /login with status code 302", () => {
    return chai
      .request("http://localhost:3000")
      .get("/urls/new")
      .then((res) => {
        expect(res).to.redirect;
        expect(res).to.redirectTo("http://localhost:3000/login");
        expect(res).to.have.status(302);
      });
  });

  it("should return status code 404 for GET /urls/NOTEXISTS", () => {
    return chai
      .request("http://localhost:3000")
      .get("/urls/NOTEXISTS")
      .then((res) => {
        expect(res).to.have.status(404);
      });
  });

  it("should return status code 403 for GET /urls/b2xVn2", () => {
    return chai
      .request("http://localhost:3000")
      .get("/urls/b2xVn2")
      .then((res) => {
        expect(res).to.have.status(403);
      });
  });
});
